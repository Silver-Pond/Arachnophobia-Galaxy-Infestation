<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#070707"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/submain"
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/loginTitleImage"
            android:layout_width="match_parent"
            android:layout_height="218dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/spider_purple" />

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/black_ops_one"
            android:text="ARACHNOPHOBIA: GALAXY INFESTATION"
            android:textAlignment="center"
            android:textColor="#009688"
            android:textSize="30sp" />

        <LinearLayout
            android:id="@+id/submainhorizontal"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="35dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/usernameImage"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/ic_dialog_info" />

            <EditText
                android:id="@+id/usernameLoginInput"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/black_ops_one"
                android:hint="USERNAME"
                android:inputType="text"
                android:textColor="#009688"
                android:textColorHint="#009688"
                android:textSize="20sp"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/submainhorizontal02"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="35dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/passwordImage"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/ic_lock_idle_lock" />

            <EditText
                android:id="@+id/passwordLoginInput"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/black_ops_one"
                android:hint="PASSWORD"
                android:inputType="textPassword"
                android:textColor="#009688"
                android:textColorHint="#009688"
                android:textSize="20sp"
                android:textStyle="italic" />
        </LinearLayout>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:background="@drawable/custom_button"
            android:backgroundTint="#673AB7"
            android:fontFamily="@font/black_ops_one"
            android:text="LOGIN"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/loginText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/black_ops_one"
            android:text="Don't have an account yet?"
            android:textAlignment="center"
            android:textColor="#9C27B0"
            android:textStyle="italic" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>